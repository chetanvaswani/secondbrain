generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  content Content[]
  link Link[]
}

model Content {
  id Int @id @default(autoincrement())
  link String
  type String
  title String
  user Users @relation(fields: [userId], references: [id])
  userId Int
  tag Tag[]
}

model Tag {
  id Int @id @default(autoincrement())
  title String
  content Content @relation(fields: [contentId], references: [id])
  contentId Int
}

model Link {
  id Int @id @default(autoincrement())
  hash String
  user Users @relation(fields: [userId], references: [id])
  userId Int
}